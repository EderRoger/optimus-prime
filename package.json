{
  "name": "optimus-prime",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm run build",
    "start": "DEBUG=optimus-prime:* node ./dist/server.js",
    "dev": "DEBUG=optimus-prime:* nodemon --inspect  ./src/server.js --exec babel-node",
    "build": "babel src --out-dir dist",
    "lint:check": "eslint ./src/ ./tests/",
    "lint:fix": "eslint --fix ./src/ ./tests/",
    "commitizen": "git cz",
    "test": "npm run test:unit && npm run test:integration --forceExit",
    "test:unit": "jest ./test/unit/",
    "test:integration": "jest ./test/integration/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update-coverage": "jest --coverage --forceExit",
    "precommit": "npm run lint:check",
    "prepush": "npm test"
  },
  "dependencies": {
    "apollo-engine": "^0.5.0",
    "apollo-server-express": "^1.1.7",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "bluebird": "^3.5.0",
    "body-parser": "~1.17.1",
    "compression": "^1.7.1",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "git-last-commit": "^0.3.0",
    "graphql": "^0.11.7",
    "graphql-subscriptions": "^0.5.4",
    "graphql-tools": "^2.5.1",
    "helmet": "^3.8.1",
    "moment": "^2.18.1",
    "mongodb": "^2.2.33",
    "mongoose": "^4.11.12",
    "morgan": "~1.8.1",
    "subscriptions-transport-ws": "^0.9.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.7.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js?(x)"
    ],
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ],
    "delay": "2500"
  }
}
